
<form method="post" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="PATCH">
  <p> Update Figure Name:  <input placeholder=<%= @figure.name %> type="text" id="figure_name" name="figure[name]"></p>

  Pick an existing Title<br>
  <% Title.all.each do |t| %>
    <input type="checkbox" id="title_<%= t.id %>" name="figure[title_ids][]" value="<%=t.id%>"><%= t.name %> <br>
  <% end %>
</p>

<p>
  Pick an existing landmark<br>
  <% Landmark.all.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= l.id %>" value="<%= l.id %>"><%= l.name %> <br>
  <% end %>
</p>
<p> Enter a new title </p>
<input type="text" id="new_title" name="title[name]">

<p> Enter a new landmark </p>
<input type="text" id="new_landmark" name="landmark[name]">

<br>
<br>


  <input id="Submit" value="Edit Figure" type="submit">
</form>
