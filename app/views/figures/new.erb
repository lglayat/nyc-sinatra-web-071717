<h1> Create a new Figure </h1>

<form method="post" action="/figures">
  <p> New Figure Name:  <input type="text" id="figure_name" name="figure[name]"></p>
  <p>
      Pick an existing Title<br>
      <% Title.all.each do |t| %>
        <input type="checkbox" id="title_<%= t.id %>" name="figure[title_ids][]" value="<%=t.id%>"><%= t.name %> <br>
      <% end %>
  </p>

  <p>
      Pick an existing landmark<br>
      <% Landmark.all.each do |l| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= l.id %>" value="<%= l.id %>"><%= l.name %> <br>
      <% end %>
  </p>
  <p> Enter a new title </p>
  <input type="text" id="new_title" name="title[name]">

  <p> Enter a new landmark </p>
  <input type="text" id="new_landmark" name="landmark[name]">

  <br>
  <br>
  <input id="Submit" value="Create New Figure" type="submit">


</form>
